{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.d.ts", "src/**/*.ts", "src/**/*.tsx", "src/**/*.vue", "mock/**/*"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "removeComments": false,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "types": ["element-plus/global"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
  }
}
